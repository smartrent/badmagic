{
  "compilerOptions": {
    "outDir": "./dist",
    "declaration": true,
    "sourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "ES2017",
    "jsx": "react",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "lib": ["dom", "es7"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true
  },
  "include": ["./src/**/*"]
}
