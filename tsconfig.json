{
  "compilerOptions": {
    "outDir": "./dist",
    "declaration": true,
    "sourceMap": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "lib": ["dom", "es7"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true
  },
  "include": ["./src/**/*", "examples/src/lib/*"]
}
